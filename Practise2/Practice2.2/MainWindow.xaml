<Window x:Class="Practice2._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice2._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center">
            <TextBox x:Name="txtbox1" Text="{Binding ElementName=slider1,Path=Value}" Width="80" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
            <Slider x:Name="slider1" Maximum="32767" Minimum="37" Width="200" TickFrequency="10" IsSnapToTickEnabled="True" Margin="10"/>
            <Button x:Name="btn1" Width="40" Padding="2">Click</Button>
        </StackPanel>
    </Grid>
</Window>

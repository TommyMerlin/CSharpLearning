<Window x:Class="Practice1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice1"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Window1" Height="270" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Margin="20" CornerRadius="20" Padding="30" BorderBrush="Black" BorderThickness="2">
            <StackPanel>
                <Label Margin="3" HorizontalAlignment="Center">A Button Stack</Label>
                <Button Margin="3" Width="100">Button 1</Button>
                <Button Margin="3" Width="100">Button 2</Button>
                <Button Margin="3" Width="100">Button 3</Button>
                <Button Margin="3" Width="100">Button 4</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
